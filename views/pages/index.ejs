<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>
</head>

<body class="container">
        <table class="table table-dark table-striped">
            <% if(productos.length == 0){ %>
                <h1>No hay productos</h1>
            <% }else{ %>
                <thead>
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Precio</th>
                        <th scope="col">thumbnail</th>
                        <th scope="col">Agregar Carrito</th>
                    </tr>
                </thead>
                <tbody>
                    <% productos.forEach(i => { %> 
                    <tr>
                        <td><a href="/productos/<%=i.id %>"><%=i.name %></a></td>
                        <td><%=i.price %> </td>
                        <td><%=i.thumbnail %> </td>
                        <!-- button to add to cart via post method -->
                        <td><form action="/carrito/<%=i.id %> " method="post"><button type="submit" name="<% i.id %>">Agregar al carrito</button></form></td>
                    </tr>
                    <% }) %> 
                </tbody>
            <% } %> 
        </table>
        <div>
            <a href="/carrito"><button type="button" class="btn btn-primary">Ver carrito</button></a>
        </div>


</body>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
    integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
    crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js"
    integrity="sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk"
    crossorigin="anonymous"></script>

</html>